<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2.5dp"
        android:paddingRight="2.5dp" />

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/project_name_input"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:text="@string/project_name"
                android:textColor="#000" />

            <EditText
                android:id="@+id/project_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/project_name"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/station_name_input"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:text="@string/station_name"
                android:textColor="#000" />

            <EditText
                android:id="@+id/station_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_name_input"
                android:layout_toRightOf="@id/station_name"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/address_input"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="@string/address"
                android:textColor="#000" />

            <TextView
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_name_input"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/address"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_input"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="@string/create_time"
                android:textColor="#000" />

            <TextView
                android:id="@+id/create_time_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_input"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/create_time"
                android:paddingLeft="10dp"
                android:textColor="#000" />
        </RelativeLayout>

        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000" />
    </LinearLayout>

</RelativeLayout>